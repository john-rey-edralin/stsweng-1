    <div class="d-flex flex-row justify-content-center">
        <div class="col-10 d-flex flex-column p-5">

            {{!-- FORM TITLE --}}
            <div class="d-flex flex-row">
                <div id="form-title" class="shadow-sm bg-light rounded-lg py-3 px-4 ms-2">
                    <h1 class="mb-0 mt-1"><span class="material-icons-two-tone mb-1 md-48">class</span> CREATE EVENT
                    </h1>
                </div>
            </div>

            <p id="event-id" hidden>{{event._id}}</p>

            <br>
            <form>
                {{!-- EVENT DETAILS --}}
                <div id="form-event-info" class="container-fluid shadow-sm bg-light rounded-sm p-5">

                    {{!-- EVENT HEADER --}}
                    <div class="d-flex flex-row align-items-center">
                        <h1 class="form-type-header me-auto align-self-center"><span
                                class="material-icons-two-tone mb-1 md-48">event_available</span> Event Details</h1>
                    </div>

                    <hr>
                    {{!-- EVENT CONTENT --}}
                    <div id="form-event-contents" class="row">

                        {{!-- CLIENT DETAILS --}}
                        <div class="col px-4">
                            <div class="form-group my-3">
                                <label for="client-name">Client Name</label>
                                <input type="text" class="form-control" id="client-name" name="client-name" value="{{event.clientName}}" required>
                                <div id="client-name-help" class="form-text">Can be the client's given name or Facebook
                                    name.</div>
                            </div>
                            <div class="form-group my-3">
                                <label for="client-mobile-number">Client Mobile Number</label>
                                <input type="tel" class="form-control" id="client-mobile-number"
                                    name="client-mobile-number" value="{{event.clientMobileNumber}}" required>
                                <div id="client-mobile-number-help" class="form-text">Country code can be changed if
                                    needed.
                                </div>
                            </div>
                            <div class="form-group my-3">
                                <label for="representative-name">Representative Name</label>
                                <input type="text" class="form-control" id="representative-name"
                                    name="representative-name" value="{{event.repName}}">
                                <div id="representative-name-help" class="form-text">Authorized representative of the
                                    client. <span class="fw-bold">Optional.</span></div>
                            </div>
                            <div class="form-group my-3">
                                <label for="representative-contact-number">Representative Mobile Number</label>
                                <input type="tel" class="form-control" id="representative-mobile-number"
                                    name="representative-mobile-number" value="{{event.repMobileNumber}}">
                                <div id="representative-mobile-number-help" class="form-text">Country code can be
                                    changed if needed. <span class="fw-bold">Optional.</span>
                                </div>
                            </div>
                        </div>

                        {{!-- EVENT DETAILS --}}
                        <div class="col px-4">
                            <div class="form-group my-3">
                                <label for="event-type">Type of Event</label>
                                <input type="text" class="form-control autocomplete" id="event-type" name="event-type" value="{{event.eventType}}"
                                    required>
                                <div id="event-type-help" class="form-text">Start typing for suggestions or input a new
                                    type.</div>
                            </div>
                            <div class="form-group my-3">
                                <label for="event-date">Date of Event</label>
                                <input type="date" class="form-control w-100" id="event-date" name="event-date" required>
                                <div id="event-date-help" class="form-text">Choose a date from the date picker.</div>
                            </div>
                            <div class="form-group my-3">
                                <label for="event-time">Time of Event</label>
                                <select class="form-control form-select" id="event-time" name="event-time" required>
                                    <option value="">Select an option...</option>
                                    <option value="Afternoon">Afternoon (11:00 AM - 02:00 PM)</option>
                                    <option value="Evening">Evening (04:00 PM - 07:00 PM)</option>
                                </select>
                                <div id="event-time-help" class="form-text">Extra hours are added in the transaction
                                    details.</div>
                            </div>
                            <div class="form-group my-3">
                                <label for="event-pax">Number of Pax</label>
                                <input type="number" class="form-control w-50" id="event-pax" name="event-pax" value="{{event.numOfPax}}" required>
                                <div id="event-pax-help" class="form-text">Input by typing or using the spinner.
                                </div>
                            </div>
                        </div>

                        {{!-- PACKAGE AND NOTES --}}
                        <div class="col-5 px-4 d-flex flex-column">
                            <label class="mt-3 required package" for="">Event Venue and Package</label>

                            {{!-- GARDEN OPTIONS --}}
                            <div class="input-group mb-1">
                                <div class="input-group-text">
                                    <input class="form-check-input mt-0 venue-checkbox" id="venue-garden"
                                        name="venue-garden" type="checkbox" value="Garden">
                                </div>
                                <label class="input-group-text" for="garden-options"><strong>Garden</strong></label>
                                <select class="form-select package" id="garden-options" name="garden-options" disabled>
                                    <option value="" selected> No Package </option>
                                </select>
                            </div>

                            {{!-- SUNROOM OPTIONS --}}
                            <div class="input-group mb-1">
                                <div class="input-group-text">
                                    <input class="form-check-input mt-0 venue-checkbox" id="venue-sunroom"
                                        name="venue-sunroom" type="checkbox" value="Sunroom">
                                </div>
                                <label class="input-group-text" for="sunroom-options"><strong>Sunroom</strong></label>
                                <select class="form-select package" id="sunroom-options" name="sunroom-options"
                                    disabled>
                                    <option value="" selected> No Package </option>
                                </select>
                            </div>

                            {{!-- TERRACE OPTIONS --}}
                            <div class="input-group mb-1">
                                <div class="input-group-text">
                                    <input class="form-check-input mt-0 venue-checkbox" id="venue-terrace"
                                        name="venue-terrace" type="checkbox" value="Terrace">
                                </div>
                                <label class="input-group-text" for="terrace-options"><strong>Terrace</strong></label>
                                <select class="form-select package" id="terrace-options" name="terrace-options"
                                    disabled>
                                    <option value="" selected> No Package </option>
                                </select>
                            </div>

                            {{!-- ADDITIONAL PAX OPTION --}}
                            <div class="form-check align-self-end">
                                <input class="form-check-input" type="checkbox" id="additional-pax"
                                    name="additional-pax">
                                <label class="form-check-label number fs-6" for="additional-pax">Add Additional 5 Pax
                                    (Php
                                    2,000.00)</label>
                            </div>
                            <div id="event-pax-help" class="form-text">Put a check on the venue/s and select the
                                packages from the dropdown menu.
                            </div>

                            <div class="form-group my-3">
                                <label for="event-notes">Notes</label>
                                <textarea class="form-control" id="event-notes" name="event-notes" rows="4" value="{{event.eventNotes}}"></textarea>
                                <div id="event-notes-help" name class="form-text">Additional details about the event, if
                                    any.
                                    The box can be resized by dragging the lower-right corner. <span class="fw-bold">Optional.</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    {{!-- EVENT ERROR MESSAGES --}}
                    <div id="form-event-errors">
                        <strong>
                            <div class="text-center text-danger error" id="missing-error"></div>
                            <div class="text-center text-danger error" id="client-name-error"></div>
                            <div class="text-center text-danger error" id="client-number-error"></div>
                            <div class="text-center text-danger error" id="rep-name-error"></div>
                            <div class="text-center text-danger error" id="rep-number-error"></div>
                            <div class="text-center text-danger error" id="event-type-error"></div>
                            <div class="text-center text-danger error" id="event-date-error"></div>
                            <div class="text-center text-danger error" id="event-time-error"></div>
                            <div class="text-center text-danger error" id="event-pax-error"></div>
                        </strong>
                    </div>
                </div>

                <br>
                {{!-- MENU DETAILS --}}
                <div id="form-menu-info" class="container-fluid shadow-sm bg-light rounded-sm p-5">

                    {{!-- MENU HEADER --}}
                    <div class="d-flex flex-row align-items-center">
                        <h1 class="form-type-header me-auto align-self-center"><span
                                class="material-icons-two-tone mb-1 md-48">menu_book</span> Menu Details
                        </h1>
                    </div>

                    {{!-- MENU CONTENTS --}}
                    <div id="form-menu-contents">

                        <hr>
                        <div class="mx-5 p-3 text-center">Choose the food to be served at the event by clicking the
                            respective button. Clicking again will deselect the option. Additional food
                            options may also be added below.</div>
<div id="menu-package">
                        {{!-- MENU BUTTONS --}}
                        <div class="d-flex flex-row flex-wrap justify-content-center">
                            <button id="menu-salad-button" class="btn menu-button border rounded-pill mx-2 px-4 py-2"
                                type="button" data-bs-toggle="collapse" data-bs-target="#menu-salad-contents"
                                aria-expanded="false" aria-controls="menu-salad-contents" disabled>
                                SALAD
                            </button>
                            <button id="menu-pasta-button" class="btn menu-button border rounded-pill mx-2 px-4 py-2"
                                type="button" data-bs-toggle="collapse" data-bs-target="#menu-pasta-contents"
                                aria-expanded="false" aria-controls="menu-pasta-contents" disabled>
                                PASTA
                            </button>
                            <button id="menu-beef-button" class="btn menu-button border rounded-pill mx-2 px-4 py-2"
                                type="button" data-bs-toggle="collapse" data-bs-target="#menu-beef-contents"
                                aria-expanded="false" aria-controls="menu-beef-contents" disabled>
                                BEEF
                            </button>
                            <button id="menu-pork-button" class="btn menu-button border rounded-pill mx-2 px-4 py-2"
                                type="button" data-bs-toggle="collapse" data-bs-target="#menu-pork-contents"
                                aria-expanded="false" aria-controls="menu-pork-contents" disabled>
                                PORK
                            </button>
                            <button id="menu-chicken-button" class="btn menu-button border rounded-pill mx-2 px-4 py-2"
                                type="button" data-bs-toggle="collapse" data-bs-target="#menu-chicken-contents"
                                aria-expanded="false" aria-controls="menu-chicken-contents" disabled>
                                CHICKEN
                            </button>
                            <button id="menu-fish-button" class="btn menu-button border rounded-pill mx-2 px-4 py-2"
                                type="button" data-bs-toggle="collapse" data-bs-target="#menu-fish-contents"
                                aria-expanded="false" aria-controls="menu-fish-contents" disabled>
                                FISH
                            </button>
                        </div>

                        {{!-- SALAD PACKAGE ITEMS --}}
                        <div id="menu-salad-contents" class="menu-item-content collapse">
                            <hr>
                            <div class="d-flex flex-row justify-content-start">
                                <h2 class="menu-item-header mx-4 align-self-center">Salad</h2>
                                <div class="form-check mx-5 align-self-center">
                                    <input class="form-check-input" type="radio" name="salad-options" id="salad-1"
                                        value="Chicken Caesar Salad">
                                    <label class="form-check-label" for="salad-1">Chicken Caesar Salad</label>
                                </div>
                                <div class="form-group row my-3 ms-auto">
                                    <label for="salad-quantity" class="col col-form-label">Quantity</label>
                                    <div class="col-8">
                                        <input type="number" class="form-control w-75" id="salad-quantity" value="{{event.menuPackage.saladQuantity}}" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {{!-- PASTA PACKAGE ITEMS --}}
                        <div id="menu-pasta-contents" class="menu-item-content collapse">
                            <hr>
                            <div class="d-flex flex-row justify-content-start">
                                <h2 class="menu-item-header mx-4 align-self-center">Pasta</h2>
                                <div class="form-check mx-5 align-self-center">
                                    <input class="form-check-input" type="radio" name="pasta-options" id="pasta-1"
                                        value="Creamy Chicken Pesto">
                                    <label class="form-check-label" for="pasta-1">Creamy Chicken Pesto</label>
                                </div>
                                <div class="form-check mx-5 align-self-center">
                                    <input class="form-check-input" type="radio" name="pasta-options" id="pasta-2"
                                        value="Shirmp and Squid Marinara">
                                    <label class="form-check-label" for="pasta-2">Shirmp and Squid Marinara</label>
                                </div>
                                <div class="form-group row my-3 ms-auto">
                                    <label for="pasta-quantity" class="col col-form-label">Quantity</label>
                                    <div class="col-8">
                                        <input type="number" class="form-control w-75" id="pasta-quantity" value="{{event.menuPackage.pastaQuantity}}" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {{!-- BEEF PACKAGE ITEMS --}}
                        <div id="menu-beef-contents" class="menu-item-content collapse">
                            <hr>
                            <div class="d-flex flex-row justify-content-start">
                                <h2 class="menu-item-header mx-4 align-self-center">Beef</h2>
                                <div class="form-check mx-5 align-self-center">
                                    <input class="form-check-input" type="radio" name="beef-options" id="beef-1"
                                        value="Balai Yllana Kare Kare">
                                    <label class="form-check-label" for="beef-1">Balai Yllana Kare Kare</label>
                                </div>
                                <div class="form-check mx-5 align-self-center">
                                    <input class="form-check-input" type="radio" name="beef-options" id="beef-2"
                                        value="Caldereta">
                                    <label class="form-check-label" for="beef-2">Caldereta</label>
                                </div>
                                <div class="form-group row my-3 ms-auto">
                                    <label for="beef-quantity" class="col col-form-label">Quantity</label>
                                    <div class="col-8">
                                        <input type="number" class="form-control w-75" id="beef-quantity" value="{{event.menuPackage.beefQuantity}}" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {{!-- PORK PACKAGE ITEMS --}}
                        <div id="menu-pork-contents" class="menu-item-content collapse">
                            <hr>
                            <div class="d-flex flex-row justify-content-start">
                                <h2 class="menu-item-header mx-4 align-self-center">Pork</h2>
                                <div class="form-check mx-5 align-self-center">
                                    <input class="form-check-input" type="radio" name="pork-options" id="pork-1"
                                        value="Sisig Ihaw">
                                    <label class="form-check-label" for="pork-1">Sisig Ihaw</label>
                                </div>
                                <div class="form-group row my-3 ms-auto">
                                    <label for="pork-quantity" class="col col-form-label">Quantity</label>
                                    <div class="col-8">
                                        <input type="number" class="form-control w-75" id="pork-quantity" value="{{event.menuPackage.porkQuantity}}" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {{!-- CHICKEN PACKAGE ITEMS --}}
                        <div id="menu-chicken-contents" class="menu-item-content collapse">
                            <hr>
                            <div class="d-flex flex-row justify-content-start">
                                <h2 class="menu-item-header mx-4 align-self-center">Chicken</h2>
                                <div class="form-check mx-5 align-self-center">
                                    <input class="form-check-input" type="radio" name="chicken-options" id="chicken-1"
                                        value="Buttered Chicken">
                                    <label class="form-check-label" for="chicken-1">Buttered Chicken</label>
                                </div>
                                <div class="form-check mx-5 align-self-center">
                                    <input class="form-check-input" type="radio" name="chicken-options" id="chicken-2"
                                        value="Balai Yllana Fried Chicken">
                                    <label class="form-check-label" for="chicken-2">Balai Yllana Fried Chicken</label>
                                </div>
                                <div class="form-group row my-3 ms-auto">
                                    <label for="chicken-quantity" class="col col-form-label">Quantity</label>
                                    <div class="col-8">
                                        <input type="number" class="form-control w-75" id="chicken-quantity" value="{{event.menuPackage.chickenQuantity}}" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {{!-- FISH PACKAGE ITEMS --}}
                        <div id="menu-fish-contents" class="menu-item-content collapse">
                            <hr>
                            <div class="d-flex flex-row justify-content-start">
                                <h2 class="menu-item-header mx-4 align-self-center">Fish</h2>
                                <div class="form-check mx-5 align-self-center">
                                    <input class="form-check-input" type="radio" name="fish-options" id="fish-1"
                                        value="Parmesan Crusted Fish">
                                    <label class="form-check-label" for="fish-1">Parmesan Crusted Fish</label>
                                </div>
                                <div class="form-group row my-3 ms-auto">
                                    <label for="fish-quantity" class="col col-form-label">Quantity</label>
                                    <div class="col-8">
                                        <input type="number" class="form-control w-75" id="fish-quantity" value="{{event.menuPackage.fishQuantity}}" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>
</div>
                        {{!-- RICE AND ICED TEA --}}
                        <div id="menu-ricedtea-contents" class="menu-item-content">
                            <hr>
                            <div class="d-flex flex-row justify-content-start">
                                <h2 class="menu-item-header mx-4 align-self-center">Iced Tea</h2>
                                <div class="form-group row my-3 ms-auto">
                                    <label for="icedtea-quantity" class="col col-form-label">Quantity</label>
                                    <div class="col-8">
                                        <input type="number" class="form-control w-75" id="icedtea-quantity"
                                            name="icedtea-quantity" value="{{event.menuPackage.icedTeaQuantity}}" disabled>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div class="d-flex flex-row justify-content-start">
                                <h2 class="menu-item-header mx-4 align-self-center">Rice</h2>
                                <div class="form-group row my-3 ms-auto">
                                    <label for="rice-quantity" class="col col-form-label">Quantity</label>
                                    <div class="col-8">
                                        <input type="number" class="form-control w-75" id="rice-quantity"
                                            name="rice-quantity" value="{{event.menuPackage.riceQuantity}}" disabled>
                                    </div>
