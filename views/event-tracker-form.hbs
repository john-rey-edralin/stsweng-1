                            <div id="additional-items-list"></div>
                            <div class="me-5 mt-4" id="additional-items-total"></div>
                        </div>

                    </div>
                </div>

                <br>
                {{!-- TRANSACTION DETAILS --}}
                <div id="form-transaction-info" class="container-fluid shadow-sm bg-light rounded-sm p-5">
                    <div class="d-flex flex-row align-items-center">
                        <h1 class="form-type-header me-auto align-self-center"><span
                                class="material-icons-two-tone mb-1 md-48">payments</span> Transaction Details</h1>
                    </div>

                    <hr>
                    {{!-- EXTRA CHARGES DETAILS --}}
                    <div id="extra-charges-contents" class="mt-4 mb-5">

                        {{!-- EXTRA CHARGES TITLE --}}
                        <div class="d-flex justify-items-around">
                            <h2 class="transaction-item-header ms-4 my-auto">Extra Charges and Corkage Fees</h2>
                            <button class="btn charges-modal-button ms-auto me-4" type="button" data-bs-toggle="modal"
                                data-bs-target="#extra-charges-modal">
                                <span class="material-icons-two-tone md-48">
                                    add_circle
                                </span>
                            </button>
                        </div>

                        {{!-- EXTRA CHARGES MODAL --}}
                        <div class="modal fade" id="extra-charges-modal" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="extra-charges-modal-header">Add Extra Charges</h5>
                                    </div>
                                    <div class="modal-body p-4 ui-front">
                                        <div class="text-center">Enter the item's name, quantity, and price before
                                            clicking <strong>Add Item</strong>. Remove an item by clicking the
                                            <strong>X</strong> button.
                                        </div>
                                        <div class="form-group my-3">
                                            <label for="extra-charges-name">Charge Name</label>
                                            <input type="text" class="form-control extra-charges-autocomplete"
                                                id="extra-charges-name" name="extra-charges-name">
                                        </div>
                                        <div class="form-group my-3">
                                            <label for="extra-charges-quantity">Quantity</label>
                                            <input type="number" class="form-control" id="extra-charges-quantity"
                                                name="extra-charges-quantity">
                                        </div>
                                        <div class="form-group my-3">
                                            <label for="extra-charges-price">Price</label>
                                            <input type="number" class="form-control" id="extra-charges-price"
                                                name="extra-charges-price">
                                        </div>
                                        <strong>
                                            <div class="mx-5 p-3 text-center text-danger error"
                                                id="extra-charges-error">
                                            </div>
                                        </strong>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn extra-charges-add-button" disabled>Add
                                            Item</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {{!-- EXTRA CHARGES TABLE --}}
                        <div class="row px-4 py-2 mx-5 my-4" id="extra-charges-header">
                            <h6 class="col mb-0 mt-1 text-center">No charges applied.</h6>
                        </div>
                        <div id="extra-charges-list"></div>
                        <div class="me-5 my-4" id="extra-charges-total"></div>
                    </div>

                    {{!-- DISCOUNTS DETAILS --}}
                    <div id="discounts-contents">
                        <hr>
                        {{!-- DISCOUNT TITLE --}}
                        <div class="d-flex justify-items-around my-4">
                            <h2 class="transaction-item-header ms-4 my-auto">Discounts</h2>
                            <button class="btn discounts-modal-button ms-auto me-4" type="button" data-bs-toggle="modal"
                                data-bs-target="#discounts-modal">
                                <span class="material-icons-two-tone md-48">
                                    add_circle
                                </span>
                            </button>
                        </div>

                        {{!-- DISCOUNT MODAL --}}
                        <div class="modal fade" id="discounts-modal" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="discounts-modal-header">Add Discounts</h5>
                                    </div>
                                    <div class="modal-body p-4 ui-front">
                                        <div class="text-center">Enter the discount's name, and price before
                                            clicking <strong>Add Item</strong>. Remove an item by clicking the
                                            <strong>X</strong> button.
                                        </div>
                                        <div class="form-group my-3">
                                            <label for="discount-name">Discount Name</label>
                                            <input type="text" class="form-control" id="discount-name"
                                                name="discount-name">
                                        </div>
                                        <div class="form-group my-3">
                                            <label for="discount-price">Price</label>
                                            <input type="number" class="form-control" id="discount-price"
                                                name="discount-price">
                                        </div>
                                        <strong>
                                            <div class="mx-5 p-3 text-center text-danger error" id="discount-error"
                                                name="discount-error">
                                            </div>
                                        </strong>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn discount-add-button" disabled>Add
                                            Item</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {{!-- DISCOUNTS TABLE --}}
                        <div class="row px-4 py-2 mx-5 my-4" id="discounts-header">
                            <h6 class="col mb-0 mt-1 text-center">No discounts applied.</h6>
                        </div>
                        <div id="discounts-list"></div>
                        <div class="me-5 my-4" id="discounts-total"></div>
                    </div>

                </div>

                <br>
                {{!-- BREAKDOWN --}}
                <div id="form-breakdown-info" class="container-fluid shadow-sm bg-light rounded-sm p-5">
                    <div class="d-flex flex-row align-items-center">
                        <h1 class="form-type-header me-auto align-self-center"><span
                                class="material-icons-two-tone mb-1 md-48">receipt_long</span> Total Breakdown
                        </h1>
                        </button>
                    </div>

                    <hr>

                    {{!-- BREAKDOWN TABLE --}}
                    <div id="breakdown-list">
                        <h6 class="mb-0 mt-3 text-center">Please fill out the information above.</h6>
                    </div>
                    <div class="row px-4 mx-5" id="breakdown-total"></div>
                </div>

                <br>
                {{!-- PAYMENT DETAILS --}}
                <div id="form-payment-info" class="container-fluid shadow-sm bg-light rounded-sm p-5">
                    <div class="d-flex flex-row align-items-center">
                        <h1 class="form-type-header me-auto align-self-center"><span
                                class="material-icons-two-tone mb-1 md-48">payment</span> Payment Details</h1>
                    </div>

                    <hr>
                    {{!-- PAYMENT DETAILS --}}
                    <div id="form-payment-contents">

                        {{!-- DOWNPAYMENT --}}
                        <div id="downpayment-contents">
                            <div class="form-check">
                                <input class="form-check-input mt-2 payment-checkbox" type="checkbox" id="downpayment"
                                    name="downpayment">
                                <label class="form-check-label number fs-4" for="downpayment">Downpayment</label>
                            </div>
                            <div class="row px-5">
                                <div class="col form-group my-3">
                                    <label for="downpayment-date">Date of Payment</label>
                                    <input type="date" class="form-control" id="downpayment-date"
                                        name="downpayment-date" value={{event.downpaymentDate}} disabled>
                                    <div id="downpayment-date-help" class="form-text">Choose a date from the date
                                        picker.</div>
                                </div>
                                <div class="col form-group my-3">
                                    <label for="downpayment-mode">Mode of Payment</label>
                                    <select class="form-control form-select" id="downpayment-mode"
                                        name="downpayment-mode" disabled>
                                        <option value="" selected value>Select an option...</option>
                                        <option value="Cash">Cash</option>
                                        <option value="Credit Card">Credit Card</option>
                                        <option value="GCash">GCash</option>
                                        <option value="Bank Transfer">Bank Transfer</option>
                                    </select>
                                    <div id="downpayment-mode-help" class="form-text">Select an option from the
                                        dropdown
                                        menu.</div>
                                </div>
                                <div class="col form-group my-3">
                                    <label for="downpayment-amount">Amount Paid</label>
                                    <input type="number" class="form-control" id="downpayment-amount"
                                        name="downpayment-amount" value={{event.downpaymentAmount}} disabled>
                                    <div id="downpayment-amount-help" class="form-text">Input by typing or using the
                                        spinner.</div>
                                </div>
                            </div>
                            <div id="form-event-errors">
                                <strong>
                                    <div class="text-center text-danger error" id="downpayment-error"></div>
                                    <div class="text-center text-danger error" id="downpayment-mode-error"></div>
                                    <div class="text-center text-danger error" id="downpayment-amount-error"></div>
                                </strong>
                            </div>                        
                        </div>

                        <hr>
                        {{!-- FINAL PAYMENT --}}
                        <div id="final-payment-contents">
                            <div class="form-check">
                                <input class="form-check-input mt-2 payment-checkbox" type="checkbox"
                                    id="final-payment">
                                <label class="form-check-label number fs-4" for="final-payment">Final Payment</label>
                            </div>
                            <div class="row px-5">
                                <div class="col form-group my-3">
                                    <label for="event-date">Date of Payment</label>
                                    <input type="date" class="form-control" id="final-payment-date"
                                        name="final-payment-date" disabled>
                                    <div id="event-date-help" class="form-text">Choose a date from the date picker.
                                    </div>
                                </div>
                                <div class="col form-group my-3">
                                    <label for="final-payment-mode">Mode of Payment</label>
                                    <select class="form-control form-select" id="final-payment-mode"
                                        name="final-payment-mode" disabled>
                                        <option value="" selected value>Select an option...</option>
                                        <option value="Cash">Cash</option>
                                        <option value="Credit Card">Credit Card</option>
                                        <option value="GCash">GCash</option>
                                        <option value="Bank Transfer">Bank Transfer</option>
                                    </select>
                                    <div id="final-payment-mode-help" class="form-text">Select an option from the
                                        dropdown
                                        menu.</div>
                                </div>
                                <div class="col form-group my-3">
                                    <label for="final-payment-amount">Amount Paid</label>
                                    <input type="number" class="form-control" id="final-payment-amount"
                                        name="final-payment-amount" value={{event.finalPaymentAmount}} disabled>
                                    <div id="final-payment-amount-help" class="form-text">Input by typing or using the
                                        spinner.</div>
                                </div>
                            </div>
                        <div id="form-event-errors">
                            <strong>
                                <div class="text-center text-danger error" id="final-payment-error"></div>
                                <div class="text-center text-danger error" id="final-payment-mode-error"></div>
                                <div class="text-center text-danger error" id="final-payment-amount-error"></div>
                            </strong>
                        </div>   
                        </div>

                        <hr>
                        <div id="payment-contents">
                            <div class="row px-5">
                                <div class="col-4"></div>
                                <div class="col form-group my-3">
                                    <label for="payment-amount-total">Total Amount Paid</label>
                                    <input type="text" class="form-control static" id="payment-amount-total"
                                        name="payment-amount-total" disabled>
                                    <div id="payment-amount-total-help" class="form-text">Total amount paid by the
                                        client.</div>
                                </div>
                                <div class="col form-group my-3">
                                    <label for="payment-balance">Balance</label>
                                    <input type="text" class="form-control static" id="payment-balance"
                                        name="payment-balance" disabled>
                                    <div id="payment-balance-help" class="form-text">Amount owed by the client.</div>
                                </div>
                            </div>
                        <div id="form-event-errors">
                            <strong>
                                <div class="text-center text-danger error" id="payment-error"></div>
                            </strong>
                        </div>
                        </div>

                    </div>
                </div>

                <br>
                {{!-- SUBMIT BUTTON --}}
                <div class="d-flex flex-row">
                    <div id="submit-button" class="shadow-sm bg-light rounded-lg py-3 px-4 ms-auto">
                        <a data-bs-toggle="tooltip" data-placement="left" title="Tip: Double check the [required] fields">
                        <button type="button" data-bs-toggle="modal" data-bs-target="#confirm-submit-modal"
                            class="btn btn-light" id="submit">Submit</button></a>
                    </div>
                </div>

                {{!-- CONFIRM SUBMIT MODAL --}}
                <div class="modal fade" id="confirm-submit-modal" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="confirm-submit-modal-header">Confirm Submit</h5>
                            </div>
                            <div class="modal-body p-4 ui-front">
                                <div class="text-center">Are you sure you want to <strong>submit</strong> the form?
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>

                {{!-- CONFIRM EXIT MODAL --}}
                <div class="modal fade" id="confirm-exit-modal" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="confirm-exit-modal-header">Confirm Exit</h5>
                            </div>
                            <div class="modal-body p-4 ui-front">
                                <div class="text-center">Are you sure you want to <strong>leave</strong> the page?
                                    Information typed will not be saved.
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="button" onclick="window.location='/event-tracker/reservations'"
                                    class="btn btn-danger">Exit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>
</body>

</html>