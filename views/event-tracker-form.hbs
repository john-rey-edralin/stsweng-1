<body class="d-flex flex-column position-relative" data-bs-spy="scroll" data-bs-target="#navbar" data-bs-offset="50"
    tabindex="0">
    <nav class="navbar navbar-expand-xl bg-dark sticky-top shadow-sm" id="navbar">
        <div class="container-fluid">
