                <span class="material-icons-two-tone md-light md-btsn md-24" data-bs-toggle="modal"
                    data-bs-target="#confirm-exit-modal">arrow_back_ios</span>
            </div> --}}
            <ul class="nav nav-pills">
                <li class="nav-item">
                    <a class="nav-link" href="#form-event-info">Event Details</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#form-menu-info">Menu Details</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#form-transaction-info">Transaction Details</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#form-breakdown-info">Total Breakdown</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#form-payment-info">Payment Details</a>
                </li>
            </ul>
        </div>
